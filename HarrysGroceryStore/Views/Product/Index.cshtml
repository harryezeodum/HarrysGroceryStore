@model ListViewModel

<div class="bg-dark p-2 text-white text-center">
    <h3><span class="navbar-brand ml-2 badge"> List of @Model.Products.Count() Products </span></h3>
</div>
<hr />

@foreach (var product in Model.Products)
 {
    <div class="card card-outline-primary m-1 p-1">
        <div class="fg-faded p-1">
            <h4>
                <a asp-action="ProductDetail" asp-route-id=" @product.ProductId"> @product.ProductName </a>
                <span class="badge badge-pill badge-success" style="float: right;">
                    <small> @product.Price.ToString("C") </small>
                </span>
            </h4>
        </div>
    </div>
 }

<a asp-controller="Product" asp-action="AddProduct" class="btn btn-dark"> Add a new Product </a>
<hr />

<div page-model="@Model.PagingInformation" page-action="Index" page-class-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>

