@model UserRegistrationViewModel

@{
    Layout = null;
}

<!DOCTYPE html>


<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Sign up </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="container">
    <header>
        <h3 class="text-primary">Harrys Grocery Store</h3>
        <div>
            <pre class="text-primary font-weight-bold">
       23564 Holly Spring Way          Store Hours     
       Houston, TX 77032               Monday to Sunday
       281-482-1234                    8AM to 7PM                                                                              <strong><a asp-controller="Home" asp-action="WelcomePage">Home</a></strong>   <strong> <a asp-controller="User" asp-action="LogIn">Log in</a></strong>   
            </pre>        
        </div> <hr />
    </header>
    <div class="container">
        <h2 class=" text-center m-2 p-2"> Sign Up! </h2>
        <form asp-controller="User" asp-action="SignUp" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="EmailAddress"> Email: </label>
                <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Password"> Choose a password: </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="***************" required />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="ConfirmPassword"> Confirm your password: </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="***************" required />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="FirstName"> First Name: </label>
                <input asp-for="FirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="LastName"> Last Name: </label>
                <input asp-for="LastName" class="form-control" required />
            </div>

            <div class="text-center">
                <input type="submit" value="Submit" /> <input type="submit" asp-controller="Home" asp-action="Welcomepage" value="Cancel" />
            </div>
        </form>
    </div>
</body>
</html>
