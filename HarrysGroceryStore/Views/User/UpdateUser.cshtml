        <tr>
            <th></th>
            <td> <input type="submit" class="btn btn-dark" value="Update User" /> <input type="submit" class="btn btn-dark" asp-controller="User" asp-action="UserDetail" asp-route-id="@Model.UserId" value="Cancel" /> </td>
