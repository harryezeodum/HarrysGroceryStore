@model UserChangePasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>


<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Reset Password </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="container">
    <header>
        <h3 class="text-primary">Harrys Grocery Store</h3>
        <div>
            <pre class="text-primary font-weight-bold">
       23564 Holly Spring Way          Store Hours      
       Houston, TX 77032               Monday to Sunday
       281-482-1234                    8AM to 7PM                                         <strong><a asp-controller="Product" asp-action="Index">Products</a></strong>   <strong><a asp-controller="Order" asp-action="OrderDetail">Track Orders</a></strong>   <strong><a asp-controller="User" asp-action="Index">Account</a> </strong> <strong><a asp-action="">My Items</a></strong>  <strong><a asp-controller="User" asp-action="Logout">Log out</a></strong>
            </pre>
        </div> <hr />
    </header>
    <div class="container">
        <h2 class="text-center m-2 p-2">Please change your password below! </h2>
        <form method="post" class="m-2">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="CurrentPassword">Current Password</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter your old password"  />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password"  />
            </div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="VerifyNewPassword">Verify New Password</label>
                <input asp-for="VerifyNewPassword" type="password" class="form-control" placeholder="Confirm your new password" />
            </div>
            <div class="text-center">
                <input type="submit" class="btn btn-success font-weight-bold" value="Submit" /> <input type="submit" class="btn btn-warning" asp-controller="User" asp-action="UserDetail" value="Back" />
            </div>
        </form>
    </div>
</body>
</html>
