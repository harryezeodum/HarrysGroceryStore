@model User


<label class="font-weight-bold"> Email: </label> @Model.Email
<br />
<label class="font-weight-bold"> Password: </label> @Model.PassWord
<br />
<label class="font-weight-bold"> First Name: </label> @Model.Customer.FirstName
<br />
<label class="font-weight-bold"> Last Name: </label> @Model.Customer.LastName
<br />
<label class="font-weight-bold"> Phone Number: </label> @Model.Customer.PhoneNumber
<br />
<label class="font-weight-bold"> Address: </label> @Model.Customer.Address
<br />
<label class="font-weight-bold"> City: </label> @Model.Customer.City
<br />
<label class="font-weight-bold"> State: </label> @Model.Customer.State
<br />
<label class="font-weight-bold"> Zipcode: </label> @Model.Customer.ZipCode
<br />
