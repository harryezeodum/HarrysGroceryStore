@model OrderDetail

<table>
    <tr>
        <th class="text-right"> Product Name: </th>
        <td class="p-2"> @Model.Product.ProductName </td>
    </tr>
    <tr>
        <th class="text-right"> Category: </th>
        <td class="p-2"> @Model.Product.Category </td>
    </tr>
    <tr>
        <th class="text-right"> Unit Price: </th>
        <td class="p-2"> @Model.UnitPrice.ToString("C") </td>
    </tr>
    <tr>
        <th class="text-right"> Quantity: </th>
        <td class="p-2"> @Model.Quantity </td>
    </tr>
</table>
<hr />

<h4> Are You Sure? </h4>
<form method="post">
    <input type="submit" asp-action="DeleteOrderDetail" class="btn btn-primary" value="Delete" />
    <input type="submit" asp-action="OrderDetail" class="btn btn-primary" asp-route-id="@Model.OrderDetailId" formmethod="get" value="Cancel" />
</form>
